{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "../../dist-server",
    "pretty": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "sourceMap": false,
    "target": "es2018",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "jest"
    ]
  },
  "files": [
    "../shared/global.d.ts",
    "./fastboot-server/index.ts",
    "./tasks/refresh-scraper-cache.ts"
  ],
  "exclude": [
    "node_modules",
    "!node_modules/@types"
  ],
  "include": [
    "../shared/**/*"
  ],
  "paths": {
    "@hunfencing/client": [
      "../packages/client/*"
    ]
  }
}
