<BsButtonGroup @type="checkbox" class="btn-group-toggle" ...attributes>
  {{#each
    (array
      (hash name="male" value="m")
      (hash name="female" value="f")
    )
  as |gender|
  }}
    <label
      data-test-gender-button={{gender.value}}
      class="btn btn-light {{if (eq @gender gender.value) "active"}}"
    >
      <input
        type="radio"
        value={{gender.value}}
        checked={{eq @gender gender.value}}
        onchange={{transition-to (query-params gender=gender.value)}}
        name={{concat "gender-" gender.name}}
        autocomplete="off"
      >
      {{t (concat "gender." gender.name)}}
    </label>
  {{/each}}
</BsButtonGroup>
